<?xml version="1.0"?>
<odoo>
<!-- Menu > Action > View -->

<!-- Action -->
<record id="book_model_action" model="ir.actions.act_window">
    <field name="name">Books</field>
    <field name="res_model">book</field>
    <field name="view_mode">tree,form</field>
</record>

<!-- List tree -->
<record id="book_view_tree" model="ir.ui.view">
    <field name="name">book.tree</field>
    <field name="model">book</field>
    <field name="arch" type="xml">
        <tree string="Books">
            <field name="name"/>
            <field name="subject"/>
            <field name="publisher"/>
            <field name="format"/>
            <field name="pages"/>
            <field name="library"/>
        </tree>
    </field>
</record>

<!-- form -->
<record id="book_view_form" model="ir.ui.view">
    <field name="name">book.form</field>
    <field name="model">book</field>
    <field name="arch" type="xml">
        <form string="New Book">
            <sheet>
                <group>
                    <group>
                        <separator string="General"/>
                        <field name="name"/>
                        <field name="subject"/>
                        <field name="description"/>
                    </group>
                    <group>
                        <separator string="Print Information"/>
                        <field name="publisher"/>
                        <field name="author"/>
                    </group>
                    <group>
                        <separator string="Book Information"/>
                        <field name="format"/>
                        <field name="pages"/>
                    </group>
                </group>
                <notebook>
                    <page string="Items">
                        <field name="book_items">
                            <tree string="Items" editable="bottom">
                                <field name="barcode"/>
                                <field name="status"/>
                            </tree> 
                        </field>
                    </page>
                    <page string="More Information">
                        <field name="description"/>
                        <field name="library"/>
                    </page>
                </notebook>
            </sheet>
        </form>
    </field>
</record>
</odoo>